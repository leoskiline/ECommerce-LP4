@page
@model Trabalho.Views.Produto.IndexModel
@{
}

<h4>Cadastro de Produto</h4>
<br />
<div class="row" style="margin-left:20px">
    <form class="form-inline" onload="indexProduto.init()">
        <div class="form-group">
            <input type="text" class="form-control" id="txtNome" placeholder="Digite o Nome do Produto" />
        </div>
        <div class="form-group" style="margin-left:2px">
            <select class="form-control" style="color:darkgray" id="selCategoria">
                <option>Selecionar um Produto</option>
            </select>
        </div>
        <div class="form-group" style="margin-left:10px">
            <input type="button" class="btn-success" value="Cadastrar" onclick="indexProduto.enviar()" />
            <input type="button" class="btn-warning" value="Limpar" onclick="indexProduto.limpar()" />
            <input type="hidden" id="prodId"></input>
        </div>
    </form>
</div>
<br />
<div class="col-sm-3">
    <span id="gravou"></span>
</div>
<br />
<br />


@section javascript {
    <script src="~/js/views/produto/Index.js"></script>
    <script src="~/lib/HTTPClient.js"></script>
}
